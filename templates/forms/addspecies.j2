{% extends 'base.j2' %}

{% block content %}
  <h2>Add New Species</h2>
  <form method="post">
    <div class="row g-2 form-group">
      <div class="col-md-2">
        <label for="pokedex-id">Pokedex Number</label>
        <select id="pokedex-id" name="pokedex-id" class="form-select">
          {% for pokedex in available_pokedex %}
            <option type="number" value="{{pokedex}}">{{ pokedex }}</option>
          {% endfor %}
        </select>
      </div>
      <div class="col-md">
        <label for="species" >Species Name</label>
        <input type="text" class="form-control" id="species" name="species" required>
      </div>
    </div>
    <div class="row g-2 form-group">
      <div class="col-md-6">
        <label for="type">Primary Type</label>
        <select id="type" class="form-select" name="type">
          {% for type in types %}
            <option value="{{type}}">{{ type }}</option>
          {% endfor %}
        </select>
      </div>
      <div class="col-md-6 form-group">
        <label for="secondary-type">Secondary Type</label>
        <select id="secondary-type" class="form-select" name="secondary-type">
          <option selected>None</option>
          {% for type in types %}
            <option value="{{type}}">{{ type }}</option>
          {% endfor %}
        </select>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Add Species</button>
  </form>
{% endblock %}