{% extends 'base.j2' %}

{% block content %}
  <h2>Add New Pokemon Battle Participation</h2>
  <form method="post">
    <div class="form-group">
      <label for="nickname" class="col-sm-2 col-form-label">Nickname</label>
      <input type="text" readonly class="form-control" id="nickname" name="nickname" value={{pokemon['nickname']}}>
    </div>
    <div class="form-group">
      <label for="pokemon" class="col-sm-2 col-form-label">Pokemon</label>
      <input type="text" readonly class="form-control" id="pokemon" value={{pokemon['species']}}>
    </div>
    <div class="form-group">
      <label for="trainer" class="col-sm-2 col-form-label">Trainer</label>
      <input type="text" readonly class="form-control" id="trainer" value="{{pokemon['trainer']}}">
    </div>
    <div class="form-group">
      <label for="battle">Battle</label>
        <select id="battle" name="battle" class="form-select">
          {% for battle in battles %}
            <option value="{{battle.battle_id}}">{{ battle.date }} {{ battle.stadium }}</option>
          {% endfor %}
        </select>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="1" id="knocked-out" name="knocked-out">
      <input type="hidden" value="0" id="knocked-out" name="knocked-out">
      <label class="form-check-label" for="knocked-out">
        Knocked Out?
      </label>
    </div>
    <button type="submit" class="btn btn-primary">Add Participation</button>
  </form>
{% endblock %}